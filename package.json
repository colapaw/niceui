{
  "private": true,
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "clear": "rimraf 'packages/*/{node_modules,.turbo}' && rimraf 'apps/*/{node_modules,dist,.turbo}' && rimraf node_modules",
    "changeset": "changeset",
    "release": "changeset publish",
    "commit": "git-cz"
  },
  "packageManager": "pnpm@7.1.6",
  "keywords": [
    "pnpm",
    "monorepo"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/node": "^17.0.36",
    "@vueuse/core": "^8.5.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "turbo": "^1.0.28",
    "vite": "^2.9.9"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
